      "source": [
        "# ***Testes***"
      ],
      "metadata": {
        "id": "BEZPkb3cbeQw"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "def calcular(x, y, op):\n",
        "    # Verifica se x e y são numéricos\n",
        "    try:\n",
        "        x = float(x)\n",
        "        y = float(y)\n",
        "    except ValueError:\n",
        "        return \"Erro: x e y devem ser valores numéricos.\"\n",
        "\n",
        "    # Verifica se a operação é válida\n",
        "    operacoes_validas = {\"+\", \"-\", \"*\", \"/\"}\n",
        "    if op not in operacoes_validas:\n",
        "        return \"Erro: operação inválida. Use +, -, * ou /.\"\n",
        "\n",
        "    # Realiza a operação\n",
        "    if op == \"+\":\n",
        "        return x + y\n",
        "    elif op == \"-\":\n",
        "        return x - y\n",
        "    elif op == \"*\":\n",
        "        return x * y\n",
        "    elif op == \"/\":\n",
        "        if y == 0:\n",
        "            return \"Erro: divisão por zero.\"\n",
        "        return x / y\n",
        "\n",
        "# Exemplo de uso:\n",
        "x = input(\"Digite x: \")\n",
        "y = input(\"Digite y: \")\n",
        "op = input(\"Digite a operação (+, -, *, /): \")\n",
        "\n",
        "resultado = calcular(x, y, op)\n",
        "print(resultado)"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "RJy4-yRSbg0P",
        "outputId": "0cf8ce4a-4180-471d-e10e-6117f3a0a739"
      },
      "execution_count": 14,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Digite x: 56\n",
            "Digite y: 23\n",
            "Digite a operação (+, -, *, /): +\n",
            "79.0\n"
          ]
        }
      ]
    },
