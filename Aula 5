    },
    {
      "cell_type": "code",
      "source": [
        "# Cálculo do perímetro de um círculo\n",
        "\n",
        "# Solicita o raio ao usuário\n",
        "r = input(\"Digite o raio: \")\n",
        "\n",
        "# Verifica se o valor informado é um número válido\n",
        "try:\n",
        "    r = float(r)  # Converte o valor para float\n",
        "    # Cálculo do perímetro utilizando valor aproximado de pi\n",
        "    print(2 * r * 3.14)\n",
        "\n",
        "    # Utilizando maior precisão para o valor de pi\n",
        "    print(2 * r * 3.1415)\n",
        "\n",
        "    # Utilizando o módulo math para obter pi com precisão\n",
        "    import math\n",
        "    print(2 * r * math.pi)\n",
        "\n",
        "except ValueError:\n",
        "    print(\"Por favor, insira um número válido para o raio.\")\n"
