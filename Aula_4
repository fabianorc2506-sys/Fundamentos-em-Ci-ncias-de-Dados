        "# Definindo variáveis\n",
        "a = 5               # Variável do tipo inteiro\n",
        "b = 3.2             # Variável do tipo float\n",
        "nome = \"João\"       # Variável do tipo string\n",
        "\n",
        "# Realizando operações básicas\n",
        "soma = a + b        # Soma de um inteiro e um float\n",
        "subtracao = a - b   # Subtração\n",
        "multiplicacao = a * b  # Multiplicação\n",
        "divisao = a / b     # Divisão\n",
        "\n",
        "# Realizando impressões\n",
        "print(f\"Nome: {nome}\")  # Imprime o nome\n",
        "print(f\"Soma de {a} e {b}: {soma}\")   # Imprime a soma\n",
        "print(f\"Subtração de {a} e {b}: {subtracao}\")   # Imprime a subtração\n",
        "print(f\"Multiplicação de {a} e {b}: {multiplicacao}\")  # Imprime a multiplicação\n",
        "print(f\"Divisão de {a} e {b}: {divisao}\")  # Imprime a divisão\n"
